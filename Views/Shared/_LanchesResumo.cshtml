@model Lanche;

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImagemUrl" class="img-fluid" /></p>

    <h4>
        <a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.LancheId" style="text-decoration:none;">
            @Model.Nome
        </a>
    </h4>

    <p>@Model.DescricaoCurta</p>

    <div>
        <p>
            <a class="btn btn-primary" id="cartBtn" asp-controller="CarrinhoCompra" asp-action="AddItemNoCarrinho" asp-route-lancheId="@Model.LancheId">
                Adicionar ao carrinho
            </a>
        </p>
    </div>

    <h5>Preço : @Model.Preco.ToString("c")</h5>
</div>